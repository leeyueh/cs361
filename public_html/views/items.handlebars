<html>
<head>
    <meta charset="utf=8">
    <link rel="stylesheet" href="styles.css">
    <title>EZ games</title>
    <link rel="stylesheet" href="style.css" />
</head>
<body>
    
    <nav>
        <ul>
            <th><a href="/">Home</a></th>
            <th><a href="customers">Customers</a></th>
            <th><a href="orders">Orders</a></th>
            <th><a href="items">Order Items</a></th>
            <th><a href="sellers">Sellers</a></th>
        </ul>
    </nav>
    <h1>EZ games inventory</h1>
    <table>
        <tr>
            <th>Item ID</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Discount</th>
        </tr>
        {{#each items}}
        <tr>
            <td>{{item_id}}</td>
            <td>{{quantity}}</td>
            <td>{{price}}</td>
            <td>{{discount}}</td>
        </tr>
        {{/each}}
    </table>
    <h3>Add items to inventory:</h3>
    <form id="additems" action="/items" method="post">
        <fieldset>
            <label for="item_id">Item ID</label>
            <br />
            <input type="text" name="item_id" id="item_id" maxlength="20" required>
            <br />
            <label for="quantity">Quantity</label>
            <br />
            <input type="text" name="quantity" id="quantity" maxlength="40">
            <br />
            <label for="price">Price</label>
            <br />
            <input type="number" step=0.01 name="price" id="price" maxlength="15" required>
            <br />
            <label for="discount">Discount</label>
            <br />
            <input type="number" step=0.01 name="discount" id="discount" maxlength="15" required>
            <br />
            

        </fieldset>
        <br />
        <button type="submit">Add Items</button>
    </form>

    </form>
    
    <h2>Search Item ID :</h2>
    <p> Please enter the exact match of the item ID </p>
    <form id="searchItemID" action="/items" method='GET'>
        <label for="itemIDinput">Enter item ID: </label>
        <input type="text" name="itemID" id="itemIDsearch">
    
        <button type="submit">Submit</button>
        <a href='/items'><button>Refresh page</button></a>

</form>






</body>
</html>